    <span class="icon is-large is-clickable">
      <i class="bx bxs-user-circle is-size-2"></i>
    </span>
  </div>
  <div class="dropdown-menu">
    <div class="dropdown-content">
      <%= link_to "Posts", posts_path(user_id: current_user.id), class: "dropdown-item has-text-weight-semibold" %>
