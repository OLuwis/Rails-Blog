<h2 class="title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Email", class: "label" %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Email" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, "Password", class: "label" %>
    <div class="control">
      <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.label :remember_me, class: "checkbox" do %>
        <%= f.check_box :remember_me %> Remember me
      <% end %>
    </div>
  <% end %>

  <div class="actions field is-grouped">
    <%= f.submit "Login", class: "button is-link" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>