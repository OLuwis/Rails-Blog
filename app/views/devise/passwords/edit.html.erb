<h2 class="title"><%= t("auth.update.title") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t("auth.update.new"), class: "label" %>
    <div class="control">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input", placeholder: t("auth.update.new") %>
    </div>
    <p class="help">(<%= t("auth.update.requirement") %>)</p>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("auth.update.confirm"), class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: t("auth.update.confirm") %>
  </div>

  <div class="actions field mt-4">
    <%= f.submit t("auth.update.change"), class: "button is-link" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
