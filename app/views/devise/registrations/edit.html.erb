<h2 class="title"><%= resource.name.to_s.humanize %> <%= resource.surname.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <%= f.label :name, t("auth.edit.name"), class: "label" %>
        <div class="control">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input", placeholder: t("auth.edit.name") %>
        </div>
      </div>
      <div class="field">
        <%= f.label :surname, t("auth.edit.surname"), class: "label" %>
        <div class="control">
          <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class: "input", placeholder: t("auth.edit.surname") %>
        </div>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, t("auth.edit.email"), class: "label" %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: t("auth.edit.email") %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t("auth.edit.password"), class: "label" %>
    
    <div class="control">
      <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: t("auth.edit.password") %>
    </div>
    <p class="help">(<%= t("auth.edit.requirement") %>)</p>
    <p class="help">(<%= t("auth.edit.unchanged") %>)</p>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("auth.edit.confirmation"), class: "label" %>
    <div class="control">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: t("auth.edit.confirmation") %>
    </div>
  </div>

  <div class="field">
    <%= f.label :current_password, t("auth.edit.current"), class: "label" %>
    <div class="control">
      <%= f.password_field :current_password, required: true, autocomplete: "current-password", class: "input", placeholder: t("auth.edit.current") %>
    </div>
    <p class="help">(<%= t("auth.edit.current_req") %>)</p>
  </div>

  <div class="actions field is-grouped">
    <%= f.submit t("auth.edit.update"), class: "button is-link" %>
  </div>
<% end %>

<%= button_to t("auth.edit.delete"), registration_path(resource_name), data: { turbo_confirm: t("post.confirm") },method: :delete , class: "button is-danger mt-3" %>

<%= link_to t("auth.edit.return"), root_path, class: "button is-ghost" %>
